{% extends 'base.html.twig' %}

{% block title %}Family index{% endblock %}

{% block body %}
    <h1>Family index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>HeadOfHousehold</th>
                <th>Address</th>
                <th>City</th>
                <th>Country</th>
                <th>Contact</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for family in families %}
            <tr>
                <td>{{ family.id }}</td>
                <td>{{ family.name }}</td>
                <td>{{ family.headOfHousehold }}</td>
                <td>{{ family.address }}</td>
                <td>{{ family.city }}</td>
                <td>{{ family.country }}</td>
                <td>{{ family.contact }}</td>
                <td>
                    <a href="{{ path('app_family_show', {'id': family.id}) }}">show</a>
                    <a href="{{ path('app_family_edit', {'id': family.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_family_new') }}">Create new</a>
{% endblock %}
